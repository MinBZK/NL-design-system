{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "root": "{workspaceRoot}/packages/web-components-stencil",
  "sourceRoot": "{projectRoot}",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/src/components.d.ts",
        "{workspaceRoot}/packages/web-components-react/src/components.ts",
        "{workspaceRoot}/packages/web-components-react/src/react-component-lib/"
      ],
      "options": {
        "command": "npm run build",
        "cwd": "packages/web-components-stencil",
        "outputPath": "packages/web-components-stencil/dist"
      },
      "dependsOn": ["^build"]
    },
    "watch-build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm run watch:build",
        "cwd": "packages/web-components-stencil"
      }
    },
    "lint": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm run lint",
        "cwd": "packages/web-components-stencil"
      }
    }
  }
}
